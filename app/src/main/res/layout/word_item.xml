<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/word_text"
            style="@style/wordTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Winner:"
            />

        <ImageView
            android:id="@+id/thumbs_up_icon"
            android:layout_width="@dimen/img_width_20dp"
            android:layout_height="@dimen/img_height_20dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_marginEnd="@dimen/margin_4dp"
            android:src="@drawable/ic_thumbs_up"
            app:layout_constraintEnd_toStartOf="@id/thumbs_up_count"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/thumbs_up_count"
        />

        <TextView
            android:id="@+id/thumbs_up_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_marginEnd="@dimen/margin_6dp"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintEnd_toStartOf="@id/thumbs_down_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="344"
            />


        <ImageView
            android:id="@+id/thumbs_down_icon"
            android:layout_width="@dimen/img_width_20dp"
            android:layout_height="@dimen/img_height_20dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:src="@drawable/ic_thumbs_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/thumbs_down_count"
            app:layout_constraintBottom_toBottomOf="@id/thumbs_down_count"
            tools:text="344"
            />

        <TextView
            android:id="@+id/thumbs_down_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:textSize="@dimen/text_size_18sp"
            android:layout_marginTop="@dimen/margin_6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="34"
            />

        <TextView
            android:id="@+id/word_meaning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_18sp"
            android:layout_margin="@dimen/margin_6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/word_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/exampleTv"
            tools:text="Lorem upsum Lorem upsum Lorem upsum Lorem upsum
             Lorem upsumLorem upsumLorem upsumLorem upsumLorem upsum"
            />

        <TextView
            android:id="@+id/exampleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_margin="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/word_meaning"
            app:layout_constraintBottom_toTopOf="@id/authorTv"
            tools:text="Mubarak orem upsum Lorem upsum Lorem upsum Lorem upsum
             Lorem upsumLorem upsumLorem upsumLorem upsumLorem"
            />

        <TextView
            android:id="@+id/authorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:layout_margin="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exampleTv"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Mubarak Akinbola"
            />

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:layout_margin="@dimen/margin_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exampleTv"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Written on:"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>




