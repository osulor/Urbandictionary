<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/word_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Winner:"
            />

        <ImageView
            android:id="@+id/thumbs_up_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_thumbs_up"
            app:layout_constraintStart_toStartOf="@id/word_text"
            app:layout_constraintTop_toBottomOf="@id/word_text"
        />

        <TextView
            android:id="@+id/thumbs_up_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thumbs_up_icon"
            tools:text="344"
            />


        <ImageView
            android:id="@+id/thumbs_down_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_thumbs_down"
            app:layout_constraintStart_toEndOf="@id/thumbs_up_icon"
            app:layout_constraintTop_toTopOf="@id/thumbs_up_icon"
            app:layout_constraintEnd_toEndOf="@id/word_text"
            tools:text="344"
            />

        <TextView
            android:id="@+id/thumbs_down_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@id/thumbs_down_icon"
            app:layout_constraintTop_toBottomOf="@id/thumbs_down_icon"
            tools:text="34"
            />

        <TextView
            android:id="@+id/word_meaning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="6dp"
            app:layout_constraintTop_toTopOf="@id/word_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/word_text"
            tools:text="Lorem upsum Lorem upsum Lorem upsum Lorem upsum
             Lorem upsumLorem upsumLorem upsumLorem upsumLorem upsum"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>




